<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0.5dp"
    tools:context="siddhu.projects.androidcalculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="0.9dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginEnd="0.1dp"
        android:layout_weight="2"
        android:background="@color/colorLighterGrey">

        <TextView
            android:id="@+id/textView_input_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="40sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button android:onClick="onClick"
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="C"
            android:textColor="@color/colorDarkerRed"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_parentheses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="( )"
            android:textColor="@color/colorDarkerRed"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="%"
            android:textColor="@color/colorDarkerRed"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="\u00F7"
            android:textColor="@color/colorDarkerRed"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button android:onClick="onClick"
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="7"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="8"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="9"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="x"
            android:textColor="@color/colorDarkerRed"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button android:onClick="onClick"
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="4"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="5"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="6"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_subtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="-"
            android:textColor="@color/colorDarkerRed"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button android:onClick="onClick"
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="1"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="2"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="3"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_addition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_weight="1"
            android:background="@color/operator"
            android:text="+"
            android:textColor="@color/colorDarkerRed"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button android:onClick="onClick"
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="2"
            android:background="@color/digit"
            android:text="0"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="60sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:background="@color/digit"
            android:text="."
            android:textColor="?attr/colorButtonNormal"
            android:textSize="30sp" />

        <Button android:onClick="onClick"
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginEnd="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:background="@color/colorDarkerRed"
            android:text="="
            android:textColor="?attr/colorButtonNormal"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>
